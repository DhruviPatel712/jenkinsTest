pipeline {
    agent any

    stages {
        stage('Connect to Remote Server') {
            steps {
                script {
                    def remoteServer = [
                        host: '20.204.136.143',
                        user: 'root'
                    ]

                    def tomcatWeb = '\home\techhive\Dhruvi'
                    def warFileName = 'JenkinsTest.war'

                    // Compile and package using Maven
                    def mvnHome = tool name: 'maven', type: 'maven'
                    def compilePackageCommand = "${mvnHome}\\bin\\mvn.cmd package"

                    // SSH command to copy the already built WAR file to the remote server
                    def sshCommand = """
                        scp target\\${warFileName} ${remoteServer.user}@${remoteServer.host}:${tomcatWeb}\\${warFileName}
                    """

                    def sshExitCode = bat(script: sshCommand, returnStatus: true)

                    if (sshExitCode == 0) {
                        echo 'Deployment successful.'
                    } else {
                        error "Error deploying to Tomcat. Exit code: ${sshExitCode}"
                    }
                }
            }
        }
    }
}














